{
  "name": "bulmak",
  "version": "0.0.1",
  "description": "Marketplace template build with Bulma CSS",
  "main": "src/assets/scss/app.scss",
  "scripts": {
    "css-build": "node-sass --omit-source-map-url src/assets/scss/app.scss dist/css/app.css --output-style compressed",
    "css-watch": "npm run css-build -- --watch",
    "start": "npm run css-watch",
    "css-compile": "sass src/assets/scss/app.scss dist/css/app.css --style=compressed",
    "sass-build" : "bash ./bin/scss-compile.sh"
    },
  "author": "mocfaisal",
  "license": "MIT",
  "devDependencies": {
    "bulma": "^0.9.4",
    "node-sass": "^9.0.0"
  }
}
